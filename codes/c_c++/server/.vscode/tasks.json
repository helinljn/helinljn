    "version": "2.0.0",
    "tasks": [
        {
            "label": "build windows debug",
            "type": "shell",
            "command": ".\\build.windows.bat debug",
            "group": "build"
        },
        {
            "label": "build windows release",
            "type": "shell",
            "command": ".\\build.windows.bat release",
            "group": "build"
        },
        {
            "label": "build linux debug by wsl",
            "type": "shell",
            "command": "wsl ./build.linux.sh debug",
            "group": "build"
        },
        {
            "label": "build linux release by wsl",
            "type": "shell",
            "command": "wsl ./build.linux.sh release",
            "group": "build"
        },
        {
            "label": "build linux debug",
            "type": "shell",
            "command": "chmod +x ./build.linux.sh && ./build.linux.sh debug && git checkout .",
            "group": "build"
        },
        {
            "label": "build linux release",
            "type": "shell",
            "command": "chmod +x ./build.linux.sh && ./build.linux.sh release && git checkout .",
            "group": "build"
        }
    ]
}